@model Finalproj.Models.Produto
@using Finalproj.Models
@{
    ViewData["Title"] = "Detalhes do Produto";
}
<h1>Detalhes do Produto</h1>
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Nome)</dt>
    <dd class="col-sm-10">@Model.Nome</dd>
    <dt class="col-sm-2">NEM por unidade (kg)</dt>
    <dd class="col-sm-10">@Model.NEMPorUnidade.ToString("N2")</dd>
    <dt class="col-sm-2">Classificação de Risco</dt>
    <dd class="col-sm-10">@ConstantesCatalogo.TextoClassificacao(Model.FamiliaRisco)</dd>
    <dt class="col-sm-2">Filtro técnico</dt>
    <dd class="col-sm-10">@ConstantesCatalogo.TextoFiltroTecnico(Model.FiltroTecnico)</dd>
    <dt class="col-sm-2">Calibre</dt>
    <dd class="col-sm-10">@ConstantesCatalogo.TextoCalibre(Model.Calibre)</dd>
    <dt class="col-sm-2">Unidade</dt>
    <dd class="col-sm-10">@(Model.Unidade ?? "—")</dd>
</dl>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Voltar ao catálogo</a>
</div>
