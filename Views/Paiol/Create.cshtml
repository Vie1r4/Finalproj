@model Finalproj.Models.Paiol

@{
    ViewData["Title"] = "Criar Paiol";
}

<h1>Criar novo paiol</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Localizacao" class="control-label"></label>
                <input asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="LimiteMLE" class="control-label"></label>
                <input asp-for="LimiteMLE" class="form-control" type="number" step="any" />
                <span asp-validation-for="LimiteMLE" class="text-danger"></span>
                <small class="text-muted">Teto de Segurança (NEM): kg de pólvora máximos.</small>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PerfilRisco" class="control-label"></label>
                <select asp-for="PerfilRisco" class="form-select" asp-items="@(ViewData["PerfisRisco"] as SelectList)">
                    <option value="">-- Escolher licença --</option>
                </select>
                <span asp-validation-for="PerfilRisco" class="text-danger"></span>
                <small class="text-muted">Licença do paiol (1.1G Bunker, 1.2G, 1.3G, 1.4G, 1.5G, 1.6G). Define o que pode entrar.</small>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-select" asp-items="@(new SelectList(ViewData["Estados"] as string[] ?? Array.Empty<string>()))">
                    <option value="">-- Escolher estado --</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
                <small class="text-muted">Ativo = pode receber carga; Em Manutenção = bloqueado.</small>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Cargos com acesso a este paiol</label>
                <p class="text-muted small">Seleciona que tipos de cargo podem registar entrada neste paiol. Podes alterar depois em Editar.</p>
                <div class="border rounded p-2 bg-light">
                    @foreach (var cargo in (ViewData["CargosDisponiveis"] as string[] ?? Array.Empty<string>()))
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="CargosAcesso" value="@cargo" id="cargo_@cargo" />
                            <label class="form-check-label" for="cargo_@cargo">@cargo</label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
