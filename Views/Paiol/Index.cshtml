@model IEnumerable<Finalproj.Models.Paiol>

@{
    ViewData["Title"] = "Armazém";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Armazém</h1>
        <p class="text-muted mb-0">Clique no paiol para ver o conteúdo. Use Detalhes para informações do paiol.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Movimentos" class="btn btn-outline-secondary">Movimentos</a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Gestao" class="btn btn-outline-primary">Gestão de Paióis</a>
        }
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Localizacao)</th>
            <th>Perfil de Risco</th>
            <th>Teto de segurança (kg)</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a asp-action="Conteudo" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Nome)</a></td>
                <td>@Html.DisplayFor(modelItem => item.Localizacao)</td>
                <td>@item.PerfilRisco</td>
                <td>@Html.DisplayFor(modelItem => item.LimiteMLE)</td>
                <td>@item.Estado</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p class="text-muted">Não tem acesso a nenhum paiol. Contacte o administrador para obter permissões.</p>
}
