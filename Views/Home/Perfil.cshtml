@model Finalproj.Models.PerfilEditViewModel
@{
    ViewData["Title"] = "O meu perfil";
    var temaAtual = Context.Request.Cookies["Theme"] ?? "Light";
    var temaEscuro = temaAtual == "Dark";
}
<h1 class="mb-1">O meu perfil</h1>
<p class="text-muted mb-4">Gerir os dados da conta e preferências.</p>

@if (TempData["PerfilGuardado"] as bool? == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Perfil guardado com sucesso.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}
@if (TempData["PasswordAlterada"] as bool? == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Palavra-passe alterada com sucesso.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
    </div>
}

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Identificação</h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">Dados da conta (apenas consulta).</p>
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted fw-normal">Nome de utilizador</dt>
                    <dd class="col-sm-8">@(Model.UserName ?? "—")</dd>

                    <dt class="col-sm-4 text-muted fw-normal">Email</dt>
                    <dd class="col-sm-8">@(Model.Email ?? "—")</dd>

                    @if (Model.Roles?.Count > 0)
                    {
                        <dt class="col-sm-4 text-muted fw-normal">Cargo(s)</dt>
                        <dd class="col-sm-8">@string.Join(", ", Model.Roles)</dd>
                    }

                    @if (Model.DataRegisto.HasValue)
                    {
                        <dt class="col-sm-4 text-muted fw-normal">Membro desde</dt>
                        <dd class="col-sm-8">@Model.DataRegisto.Value.ToLocalTime().ToString("dd/MM/yyyy")</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Dados pessoais</h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">Pode alterar o nome e o telefone.</p>
                <form asp-action="Perfil" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" placeholder="O seu nome" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telefone" class="form-label">Telefone</label>
                        <input asp-for="Telefone" class="form-control" placeholder="Ex: 912345678" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Guardar alterações</button>
                    <a asp-action="Index" class="btn btn-secondary">Voltar ao início</a>
                </form>
            </div>
        </div>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Segurança</h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">Alterar a palavra-passe da conta.</p>
                <form asp-action="AlterarPassword" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="PasswordAtual" class="form-label">Palavra-passe atual</label>
                        <input name="PasswordAtual" id="PasswordAtual" type="password" class="form-control" />
                        @Html.ValidationMessage("PasswordAtual", null, new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="NovaPassword" class="form-label">Nova palavra-passe</label>
                        <input name="NovaPassword" id="NovaPassword" type="password" class="form-control" />
                        @Html.ValidationMessage("NovaPassword", null, new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        <label for="ConfirmarNovaPassword" class="form-label">Confirmar nova palavra-passe</label>
                        <input name="ConfirmarNovaPassword" id="ConfirmarNovaPassword" type="password" class="form-control" />
                        @Html.ValidationMessage("ConfirmarNovaPassword", null, new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Alterar palavra-passe</button>
                </form>
            </div>
        </div>
    </div>

    <aside class="col-lg-4 mb-4 mb-lg-0">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Aparência</h5>
            </div>
            <div class="card-body">
                <form asp-action="Preferencias" method="post" id="formTema">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="tema" id="inputTema" value="@(temaEscuro ? "Light" : "Dark")" />
                    <input type="hidden" name="returnAction" value="Perfil" />
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="text-muted small">Tema</span>
                        <div class="form-check form-switch mb-0">
                            <input class="form-check-input" type="checkbox" id="switchTema" @(temaEscuro ? "checked" : "") aria-label="Modo escuro" />
                            <label class="form-check-label small" for="switchTema">@(temaEscuro ? "Escuro" : "Claro")</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card shadow-sm border-secondary">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Sessão</h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">Encerrar a sessão neste dispositivo.</p>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-secondary w-100">Terminar sessão</button>
                </form>
            </div>
        </div>
    </aside>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            var form = document.getElementById('formTema');
            var input = document.getElementById('inputTema');
            var sw = document.getElementById('switchTema');
            if (!form || !input || !sw) return;
            sw.addEventListener('change', function () {
                input.value = sw.checked ? 'Dark' : 'Light';
                form.submit();
            });
        })();
    </script>
}
